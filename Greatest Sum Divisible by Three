class Solution {
    public int maxSumDivThree(int[] nums) {
         int[] dp = new int[3];
        dp[1] = dp[2] = Integer.MIN_VALUE;
        for (int num : nums) {
            int[] temp = dp.clone();
            for (int r = 0; r < 3; r++) {
                int newSum = temp[r] + num;
                int mod = ((newSum % 3) + 3) % 3;
                dp[mod] = Math.max(dp[mod], newSum);
            }
        }
        return dp[0];
    }
}
