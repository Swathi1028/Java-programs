class Solution {
    public int numSub(String s) {
        long mod = 1_000_000_007;
        long count = 0, cur = 0;
        for (char c : s.toCharArray()) {
            if (c == '1') {
                cur++;               
                count = (count + cur) % mod; 
            } else {
                cur = 0;           
            }
        }
        return (int) count;
    }
}
